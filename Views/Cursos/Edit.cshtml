@model Tesis.Models.Cursos

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nombre" class="fw-bold"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>           
        </form>
    </div>
</div>

<div class="d-flex justify-content-lg-between gap-2 mt-3">
    <button type="submit" class="btn btn-primary w-auto px-4">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary w-auto px-4">Volver</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
