@model Tesis.Models.Estudiantes

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Estudiantes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Nombre" class="fw-bold"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Apellido" class="fw-bold"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DNI" class="fw-bold"></label>
                <input asp-for="DNI" class="form-control" />
                <span asp-validation-for="DNI" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Legajo" class="fw-bold"></label>
                <input asp-for="Legajo" class="form-control" />
                <span asp-validation-for="Legajo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Curso" class="fw-bold"></label>
                <select asp-for="CursoId" class="form-control" asp-items="ViewBag.CursoId">
                    <option value="">-- Selecciona un curso --</option>
                </select>
                <span asp-validation-for="CursoId" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Email" class="fw-bold"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="fw-bold"> Dirección </label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="fw-bold"> Altura </label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="fw-bold">Teléfono</label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>

            <h5>Información de los Padres/Tutores</h5>

            <div class="form-group">
                <label class="fw-bold">Nombre del padre</label>
                <input asp-for="NombrePadre" class="form-control" />
                <span asp-validation-for="NombrePadre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="fw-bold">Teléfono del padre</label>
                <input asp-for="TelefonoPadre" class="form-control" />
                <span asp-validation-for="TelefonoPadre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="fw-bold">Nombre de la madre</label>
                <input asp-for="NombreMadre" class="form-control" />
                <span asp-validation-for="NombreMadre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="fw-bold">Teléfono de la madre</label>
                <input asp-for="TelefonoMadre" class="form-control" />
                <span asp-validation-for="TelefonoMadre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="fw-bold">Nombre tutor/ra</label>
                <input asp-for="NombreTutor" class="form-control" />
                <span asp-validation-for="NombreTutor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="fw-bold">Teléfono tutor/ra</label>
                <input asp-for="TelefonoTutor" class="form-control" />
                <span asp-validation-for="TelefonoTutor" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-lg-between gap-2 mt-3">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary w-auto px-4">Volver</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
